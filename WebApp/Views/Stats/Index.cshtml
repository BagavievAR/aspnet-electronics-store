@model WebApp.Models.StatsViewModel

@{
    ViewData["Title"] = "Статистика приложения";
}

<h2 class="mt-3">Статистика приложения</h2>

<p class="text-muted">
    Эти данные хранятся в глобальном singleton-сервисе <code>AppStats</code>
    и общие для всех пользователей.
</p>

<table class="table table-striped mt-3" style="max-width: 500px;">
    <thead>
    <tr>
        <th>Метрика</th>
        <th>Значение</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>Просмотры главной страницы</td>
        <td>@Model.HomeViews</td>
    </tr>
    <tr>
        <td>Просмотры каталога</td>
        <td>@Model.CatalogViews</td>
    </tr>
    <tr class="fw-bold">
        <td>Всего просмотров (главная + каталог)</td>
        <td>@Model.TotalViews</td>
    </tr>
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-link">
    ← На главную
</a>
